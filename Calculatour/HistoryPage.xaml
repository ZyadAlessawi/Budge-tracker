<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Calculatour.HistoryPage"
             Title="HistoryPage">
    
    <ScrollView>
        
        <StackLayout>
            
            <Grid >
                
                <Grid.RowDefinitions>
                    <RowDefinition Height="50"/>
                </Grid.RowDefinitions>
                
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="70" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="70" />
                </Grid.ColumnDefinitions>
                
                <ImageButton 
                    Source="left.png" 
                    Clicked="Back_Clicked"  
                    WidthRequest="50" HeightRequest="50" 
                    Grid.Row="0" Grid.Column="0"/>

                <Label 
                    Text="History"
                    FontSize="Title"
                    HorizontalOptions="CenterAndExpand"
                    Grid.Column="1" Grid.Row="0"/>

                <ImageButton 
                    Source="delete.png" 
                    Clicked="Delete_Clicked"  
                    WidthRequest="50" HeightRequest="50" 
                    Grid.Row="0" Grid.Column="2"/>
           
            </Grid>
            


            <CollectionView x:Name="ListHistory"  ItemsSource="{Binding Source={x:Reference ListHistory}}" >
                    
                    <CollectionView.ItemTemplate >
                        
                        <DataTemplate  >
                            
                            <Frame BackgroundColor="LightGray" BorderColor="Gray">
                                
                                <VerticalStackLayout>
                                    
                                    <Label Text="{Binding calchistory}" FontSize="Large"/>
                            
                                    <HorizontalStackLayout>
                                        
                                       <Label Text="=" FontSize="Medium"/>
                                        
                                       <Label Text="{Binding resulthistory}" FontSize="Medium"/>
                                        
                                    </HorizontalStackLayout>
                                    
                                </VerticalStackLayout>
                            
                                <!--<TextCell Text="{Binding calchistory}" Detail="{Binding resulthistory}" DetailColor="White" TextColor="White"/>-->
                            </Frame>
                            
                        </DataTemplate>
                        
                    </CollectionView.ItemTemplate>
                    
                </CollectionView>
                
            

        </StackLayout>
    </ScrollView>
</ContentPage>